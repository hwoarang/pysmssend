from PyQt4 import QtCore, QtGui
from pysmssendmod.pysmssendgui import Ui_Sent, Testmain
SHAREDIR="/usr/share/pysmssend/"

def createtray():
	#Create Icon
	icon=QtGui.QIcon(SHAREDIR+"Icons/pysmssend.png")
	exiticon=QtGui.QIcon(SHAREDIR+"Icons/exit.png")
	abouticon=QtGui.QIcon(SHAREDIR+"Icons/book.png")
	updateicon=QtGui.QIcon(SHAREDIR+"Icons/update.png")
	trayic=QtGui.QSystemTrayIcon(icon)	
	#Implement Actions
	global ActionsMenu
	ActionsMenu=QtGui.QMenu()
	Updater=ActionsMenu.addAction(updateicon,"Check for updates")
	About=ActionsMenu.addAction(abouticon,"About")
	ActionsMenu.addSeparator()
	Exit=ActionsMenu.addAction(exiticon,"Quit Pysmssend")
	trayic.setContextMenu(ActionsMenu)
	return trayic,Exit,About,Updater

def showsentreport1(trayic):
	trayic.showMessage("Report","Message sent Successfully",trayic.Information,6000)
	
def showsentreport2(trayic):
	trayic.showMessage("Report","Message did not sent...",trayic.Warning,6000)
	
def showlogin1(trayic,account):
	trayic.showMessage("","Logged in to "+account,trayic.Information,6000)
	
def showlogin2(trayic,account):
	trayic.showMessage("","Login to "+account+" failed",trayic.Warning,6000)


	
